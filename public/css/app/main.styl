.menu-section
	//padding-top 70px
	margin-bottom 15px
	background-color $color_secundario
	border-bottom 1px solid $color_principal
.ha-menu>ul>li.active>:not(ul)
	box-shadow: inset 0 -3px 0 0 #fff;
.main-menu
	&>li
		&>a
			font-size 1em
			color #fff
			&:hover,&:active
				color #000
				&:before
					color #000	
			& i 
				font-size 23px
.sub-menu
	&>a
		&:before,&:after
			color #fff
	& ul 
		& li 
			& a 
				color rgba(255,255,255,.6)
				&.active 
					color #fff
				&:hover 
					color #fff
.sidebar-inner 
	background-color $color_principal
		
