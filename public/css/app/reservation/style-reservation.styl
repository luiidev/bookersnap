.cropArea
	background #E4E4E4
	overflow hidden
	width 100%
	height 260px
	
.image-cropper
	position relative
	overflow hidden
  
img
	position: relative;

.ta-toolbar 
	background #fefefe
	padding 4px 0

.ta-editor.form-control, 
.ta-editor.form-control .ta-bind
	min-height 80px
	
.odd
	background #efefef
	
.svg
	width 80%
	max-width 580px
	overflow auto
	padding 0 0 40px
	
	& .fixed
		position fixed
		top 20px
		height 90%

	@media screen and (max-width: 828px)
		width 100%
		max-width 100%

		& .fixed
			position relative
			top auto
			height auto

.Arial
	font-family Arial
	font-size 24px
	
.svgArea
	//background #E4E4E4
	position relative
	margin-top 10px
	
	& .imgLienzo 
		position relative
		z-index 1
		padding 0
		border 0
		border-radius 0	
		width 100%
		height 100%
.text-flyer
	&>div
		position absolute
		z-index 2
		top 0
		cursor pointer
		
	