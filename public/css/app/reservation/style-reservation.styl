@font-face
	font-family "Lobster"
	src: url('../../../fonts/lobster/Lobster.eot')
	src: url('../../../fonts/lobster/Lobster.eot?#iefix') format('embedded-opentype'),
		url('../../../fonts/lobster/Lobster.ttf') format('truetype')
	font-weight normal
	font-style normal
.wrapper-promotion
	& .text-flyer
		&>div
			position absolute
			z-index 2
			top 0
			cursor move
			width 100%
			background #000
			display block
	
	& .cropArea
		background #E4E4E4
		overflow hidden
		width 100%
		height 260px
		& .image-cropper
			position relative
			overflow hidden
	& .ta-toolbar 
		background #fefefe
		padding 4px 0
	& .ta-editor.form-control,.ta-editor.form-control .ta-bind
			min-height 80px
	& .svgArea
		//background #E4E4E4
		position relative
		margin 0px
		padding 0px
		overflow hidden
	
		& .imgLienzo
			background #E4E4E4
			position relative
			z-index 1
			padding 0
			margin 0
			border 0
			border-radius 0	
			width 100%
			height 100%
			min-height 290px

.Arial
	font-family "Arial",Helvetica Neue,Helvetica,sans-serif
	font-size 24px
.Roboto
	font-family "roboto"
	font-size 24px
	
.Lobster
	font-family "Lobster"
	font-weight normal
	font-style normal
.text-red
	color red

.tl-body
	padding 0px
	min-height 10px
	& .media
		margin 0px
	& .media-body
		padding 10px
		margin 0px
		& .lv-title span
			font-size 16px

.zoneArea
	min-height 320px
	& .round
		border-radius 50%
	& .selected-table
		&.border
			border 1px solid #011A52!important
			background-color #0639AF
			opacity 0.5
			color #fff
	& .border
		border 1px solid #ccc
		z-index 100
		& .txtcenter
			top 34%
			text-align center
			position relative
		&.round.small
			width 30px
			height 30px
			& .txtcenter
				top 26%
		&.round.medium
			width 50px 
			height 50px
		&.round.large
			width 75px
			height 75px
		&.square.small
			width 30px
			height 30px
			& .txtcenter
				top 20%
		&.square.medium
			width 50px 
			height 50px
		&.square.large
			width 75px
			height 75px
		&.recta
			& .txtcenter
				top 22%
		&.recta.small
			width 45px
			height 27px
		&.recta.medium
			width 60px 
			height 32px 
		&.recta.large
			width 75px
			height 48px

		
	